<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ic_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <ImageView
         android:id="@+id/image_ligin_one"
         android:src="@color/color_dedede"
         android:layout_width="match_parent"
         android:layout_height="0.5dp" />

     <TextView
         android:id="@+id/tailt_text"
         android:textColor="@color/tailt_dark"
         android:textSize="@dimen/home_Size_18"
         android:singleLine="true"
         android:ellipsize="end"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/news_icon"
         android:text="深圳平安金融中心钢结构....."
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content_text"
        android:layout_below="@+id/tailt_text"
        android:textSize="@dimen/home_Size_16"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/news_icon"
        android:text="完成本次问卷调查可获得"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/number_text"
        android:textColor="@color/red_light"
        android:textSize="@dimen/home_Size_22"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/tailt_text"
        android:layout_toRightOf="@+id/content_text"
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_below="@+id/tailt_text"
        android:textSize="@dimen/home_Size_16"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/number_text"
        android:text="云币"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_text"
        android:layout_below="@+id/content_text"
        android:textSize="@dimen/home_Size_16"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/news_icon"
        android:text="过期时间：2016-8-16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_below="@+id/news_icon"
        android:id="@+id/image_ligin_two"
        android:src="@color/color_dedede"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />



</RelativeLayout>