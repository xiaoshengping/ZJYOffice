                           android:layout_width="wrap_content"
                           android:layout_height="35dp"
                           android:layout_marginLeft="50dp"
                           android:layout_weight="1"
                           android:padding="2dp"
                           android:text="注册"
                           />

                       <TextView
                           android:gravity="center_vertical"
                           android:id="@+id/forget_psw_tv"
                           android:layout_width="wrap_content"
