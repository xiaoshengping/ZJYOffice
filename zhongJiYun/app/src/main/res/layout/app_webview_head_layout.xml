<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_light">
        <ImageView
            android:background="@mipmap/close_icon"
            android:id="@+id/retrun_tv"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
       <!-- <ImageView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/retrun_tv"
            android:src="@color/color_dadada"
            android:layout_centerInParent="true"
            android:layout_width="0.5dp"
            android:layout_height="20dp" />-->
        <TextView
            android:id="@+id/retrun_text_view"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_toRightOf="@+id/retrun_text_view"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/title_name_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/ic_white"
            android:textSize="@dimen/home_Size_18"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/share_image_icon"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/share_icon"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/share_image"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>