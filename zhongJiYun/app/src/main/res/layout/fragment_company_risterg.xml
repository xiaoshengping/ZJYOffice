<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/company_root_layout"
    tools:context="com.example.zhongjiyun03.zhongjiyun.fragment.PersonageRistergFragment">

    <ScrollView
        android:id="@+id/company_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="手机号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/company_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:maxLength="11"

                />

        </LinearLayout>
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:background="@color/ic_white"

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/code_textview"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="验证码"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="4"
                android:id="@+id/company_code_edit"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/code_textview"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="110dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="number"
                android:paddingLeft="10dp"

                />
            <Button
                android:textColor="@color/white"
                android:background="@drawable/loing_button_corners"
                android:id="@+id/company_code_button"
                android:layout_centerHorizontal="true"
                android:text="获取验证码"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="35dp" />
        </RelativeLayout>
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/company_name_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="text"
                android:paddingLeft="10dp"

                />

        </LinearLayout>

        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <ImageView
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="身份证号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="18"
                android:id="@+id/company_idcar_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="text"
                android:paddingLeft="10dp"

                />

        </LinearLayout>
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="所在地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/company_address_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未选择"

                android:paddingLeft="10dp"

                />

        </LinearLayout>
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="推荐人手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="11"
                android:id="@+id/company_recomment_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="number"
                android:paddingLeft="10dp"

                />

        </LinearLayout>
        <ImageView
            android:src="@color/color_dadada"

            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <ImageView
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:src="@color/color_dadada"

            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout

            android:background="@color/ic_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="简介"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:fadeScrollbars="true"
                android:id="@+id/company_introduce_edit"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/ic_white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/home_Size_14"
                android:hint="未填写"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                />

        </LinearLayout>
        <ImageView
            android:src="@color/color_dadada"

            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <ImageView
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:id="@+id/company_personge_layout"
            android:background="@color/white"
            android:layout_below="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/company_top_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_below="@+id/company_top_image"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/company_tailt_text"
                    android:textSize="@dimen/home_Size_16"
                    android:textColor="@color/color_222222"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="本人照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/home_Size_12"
                    android:textColor="@color/color_888888"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="请上传本人照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/company_personge_image"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/add_img"
                android:layout_toLeftOf="@+id/company_arrow_image"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/company_arrow_image"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/my_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@+id/company_personge_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </RelativeLayout>


        <ImageView
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <RelativeLayout
            android:id="@+id/company_front_layout"

            android:background="@color/white"
            android:layout_below="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/top_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_below="@+id/top_image"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tailt_text"
                    android:textSize="@dimen/home_Size_16"
                    android:textColor="@color/color_222222"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="身份证正面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/home_Size_12"
                    android:textColor="@color/color_888888"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="请上传身份证正面"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/company_front_image"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/add_img"
                android:layout_toLeftOf="@+id/arrow_image"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/arrow_image"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/my_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@+id/company_front_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </RelativeLayout>
        <ImageView
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="10dp" />



        <RelativeLayout
            android:id="@+id/company_trading_layout"
            android:layout_marginBottom="60dp"
            android:background="@color/white"
            android:layout_below="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/trading_top_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_below="@+id/trading_top_image"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/trading_tailt_text"
                    android:textSize="@dimen/home_Size_16"
                    android:textColor="@color/color_222222"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="营业执照或者资格证书"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/home_Size_12"
                    android:textColor="@color/color_888888"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="请上传营业执照或者资格证书"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/company_trading_image"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/add_img"
                android:layout_toLeftOf="@+id/trading_arrow_image"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/trading_arrow_image"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/my_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@+id/company_trading_image"
                android:src="@color/color_dadada"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </RelativeLayout>
        <View
            android:id="@+id/company_vMasker"
            android:visibility="gone"
            android:background="#e0000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </LinearLayout>
    </ScrollView>



    <RelativeLayout
        android:id="@+id/competitive_layout"
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image_view"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <Button
            android:text="提交"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image_view"
            android:gravity="center"
            android:background="@drawable/loing_button_corners"
            android:id="@+id/cpmpany_register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/ic_white"
            android:textSize="@dimen/home_Size_16"
            />
        <ImageView
            android:layout_below="@+id/cpmpany_register_button"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </RelativeLayout>


</RelativeLayout>
