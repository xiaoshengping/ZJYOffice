<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.zhongjiyun03.zhongjiyun.uilts.CommentServiceActivity">
    <include android:id="@+id/head_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" layout="@layout/app_head_layout"/>
    <RelativeLayout
        android:background="@color/ic_white"
        android:id="@+id/rating_layout"
        android:layout_below="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tailt_text"

            android:textColor="@color/color_222222"
            android:textSize="@dimen/home_Size_18"
            android:text="综合评价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:stepSize="1"
            android:isIndicator="false"
            android:id="@+id/enter_rating_bar"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/welfare_layout"
        android:background="@color/ic_white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/line_image_one"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />



        <CheckBox
            android:layout_below="@+id/line_image_one"
            android:id="@+id/efficiency_rabutton"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_14"
            android:text="维修技术好"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="90dp"
            android:layout_height="30dp" />
        <CheckBox
            android:layout_below="@+id/line_image_one"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_toRightOf="@+id/efficiency_rabutton"
            android:id="@+id/manner_checkBox"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/home_Size_14"
            android:text="服务态度佳"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="90dp"
            android:layout_height="30dp" />
        <CheckBox
            android:layout_below="@+id/line_image_one"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_toRightOf="@+id/manner_checkBox"
            android:id="@+id/service_checkBox"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/home_Size_14"
            android:text="维修速度快"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="90dp"
            android:layout_height="30dp" />

        <CheckBox

            android:layout_below="@+id/efficiency_rabutton"
            android:id="@+id/rest_rabutton"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_14"
            android:text="零配件质量可靠"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="110dp"
            android:layout_height="30dp" />
        <CheckBox
            android:id="@+id/price_check_button"
            android:layout_below="@+id/efficiency_rabutton"
            android:layout_toRightOf="@+id/rest_rabutton"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_14"
            android:text="价格合理"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rest_rabutton"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

    </RelativeLayout>



</RelativeLayout>
