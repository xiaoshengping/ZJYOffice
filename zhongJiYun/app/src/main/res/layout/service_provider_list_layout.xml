<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ic_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_ligin"
        android:src="@color/color_dedede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:scaleType="centerCrop"
        android:layout_below="@+id/image_ligin"
        android:src="@mipmap/service_image"
        android:id="@+id/image_view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/company_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_view"
        android:textColor="@color/tailt_dark"
        android:textSize="@dimen/home_Size_16"
        android:text="广州中基配件服务有限公司"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_marginRight="20dp"
        android:drawableLeft="@mipmap/location_icon_red"
        android:id="@+id/address_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/red_light"
        android:textSize="@dimen/home_Size_12"
        android:text="1.2km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/company_text_view"
        android:id="@+id/address_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/home_Size_14"
        android:text="所在地：广东省广州市"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/address_text"
        android:id="@+id/describe_text_view"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/home_Size_14"
        android:text="多年专业经营钻孔拽，计算机等级登记圣诞节的经济"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@+id/company_text_view"
        android:id="@+id/type_text_view"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/home_Size_14"
        android:text="板车运输"
        android:gravity="center"
        android:background="@drawable/service_text_view_corners"
        android:textColor="@color/blue_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView

        android:layout_below="@+id/image_view"
        android:id="@+id/image_ligin_end"
        android:src="@color/color_dedede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>