<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".fragment.MoreFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_view"
        android:textSize="@dimen/home_Size_18"
        android:gravity="center"
        android:textColor="@color/ic_white"
        android:text="更多"
        android:background="@color/red_light"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.example.zhongjiyun03.zhongjiyun.view.MyGridView
        android:layout_below="@+id/text_view"
        android:id="@+id/more_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@null"
        android:background="@color/ic_white"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        />
    <TextView
        android:id="@+id/more_text"
        android:layout_below="@+id/more_gridView"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <ImageView
        android:layout_below="@+id/more_text"
        android:src="@color/color_dadada"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</RelativeLayout>
