<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ic_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView

        android:src="@color/color_dadada"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/project_image_view"
            android:src="@color/red_light"
            android:layout_width="2dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/project_recommend"
            android:textSize="@dimen/home_Size_18"
            android:layout_toRightOf="@+id/project_image_view"
            android:text="项目推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/project_more_text"
            android:layout_marginTop="8dp"
            android:textColor="@color/red_light"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/home_Size_15"
            android:layout_toLeftOf="@+id/project_more_imag"

            android:text="更多"
            android:gravity="right"
            android:layout_width="40dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/project_more_imag"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_red_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/project_image"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/project_image_view"
            android:src="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <com.example.zhongjiyun03.zhongjiyun.view.CustomHomeScrollListView
            android:id="@+id/project_list_view"
            android:layout_marginTop="10dp"
            android:divider="#00000000"
            android:layout_below="@+id/project_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.example.zhongjiyun03.zhongjiyun.view.CustomHomeScrollListView>

    </RelativeLayout>
</LinearLayout>