<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/not_data_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/not_data_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      <TextView

        android:text="数据加载失败"
        android:textSize="@dimen/home_Size_16"
        android:textColor="@color/color_333333"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="网络不可用,请检查网络"
            android:textSize="@dimen/home_Size_16"
            android:id="@+id/not_data_text"
            android:textColor="@color/nodata_background"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/refresh_button"
            android:textSize="@dimen/home_Size_14"
            android:textColor="@color/ic_white"
            android:text="重新加载"
            android:background="@drawable/loing_button_corners"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="40dp" />


    </LinearLayout>
