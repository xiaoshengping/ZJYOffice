<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/ic_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



   　<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <TextView
         android:id="@+id/tailt_text"
         android:textColor="@color/color_222222"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
         android:textSize="@dimen/home_Size_16"
         android:text="容桂碧桂园"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bids_tage_text"
        android:background="@drawable/text_view_corners"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/home_Size_14"
        android:textColor="@color/red_light"
        android:text="招标中"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="20dp" />

   </RelativeLayout>
    　<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/company_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/home_Size_14"
        android:text="发布公司："
        android:textColor="@color/color_555555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/color_555555"
        android:id="@+id/company_name"
        android:layout_toRightOf="@+id/company_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/home_Size_14"

        android:text="哈尔滨君豪建筑基础有限公司"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_555555"
            android:id="@+id/address_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/home_Size_14"
            android:text="项目所在地："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_555555"
            android:layout_toRightOf="@+id/address_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/home_Size_14"
            android:id="@+id/address_text_view"
            android:text="广东顺德"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/dashed"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/time_text"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="@color/color_888888"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/home_Size_12"
                android:text="2015-12-16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/project_eyes_icon"
                android:textColor="@color/color_888888"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/home_Size_12"
                android:id="@+id/browse_text_view"
                android:text="180次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/project_bin_icon"
                android:textColor="@color/color_888888"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/home_Size_12"
                android:id="@+id/bid_text_view"
                android:text="180次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    <ImageView
        android:src="@color/color_dadada"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/success_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bid_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>