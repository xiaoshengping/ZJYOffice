<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.zhongjiyun03.zhongjiyun.uilts.RegisterActivity">
    <include  android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/app_head_layout"/>





    <LinearLayout

        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:background="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="@dimen/home_Size_16"
            android:gravity="center"
            android:text="评价我的"
            android:textColor="#222222" />


        <TextView
            android:background="@color/white"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="@dimen/home_Size_16"
            android:gravity="center"
            android:text="我的评价"
            android:textColor="#222222" />

    </LinearLayout>

    <ImageView
        android:background="@color/background"
        android:layout_marginLeft="50dp"
        android:id="@+id/cursor"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:scaleType="matrix"
        android:src="@color/red_light" />
    <ImageView

        android:src="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />








</LinearLayout>
