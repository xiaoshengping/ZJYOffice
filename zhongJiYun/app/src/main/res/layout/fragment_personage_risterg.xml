<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/root_layout"
    tools:context="com.example.zhongjiyun03.zhongjiyun.fragment.PersonageRistergFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
   <LinearLayout

       android:background="@color/ic_white"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_height="50dp">
       <TextView
           android:layout_marginLeft="20dp"
           android:text="手机号码"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <EditText

           android:id="@+id/edit_phone"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:background="@color/ic_white"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:gravity="center_vertical|right"
           android:drawablePadding="10dp"
           android:textSize="@dimen/home_Size_14"
           android:hint="未填写"
           android:inputType="number"
           android:paddingLeft="10dp"

           />

   </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:background="@color/ic_white"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/code_textview"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:maxLength="4"
             android:id="@+id/code_edit"
            android:layout_centerHorizontal="true"
             android:layout_toRightOf="@+id/code_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="110dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"
            android:inputType="number"
            android:paddingLeft="10dp"

            />
        <Button
            android:textColor="@color/white"
            android:id="@+id/code_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/loing_button_corners"
            android:text="获取验证码"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="@color/ic_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"
            android:inputType="text"
            android:paddingLeft="10dp"

            />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout

        android:background="@color/ic_white"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="身份证号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/id_card_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"
            android:inputType="number"
            android:paddingLeft="10dp"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:background="@color/ic_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="所在地"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"
            android:phoneNumber="true"
            android:paddingLeft="10dp"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="@color/ic_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="推荐人手机号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/recommend_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"
            android:inputType="number"
            android:paddingLeft="10dp"

            />

    </LinearLayout>
    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:background="@color/ic_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:paddingTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="简介"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/abstract_edit"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/ic_white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/home_Size_14"
            android:hint="未填写"

            />

    </LinearLayout>
        <LinearLayout

            android:layout_marginTop="3dp"
            android:background="@color/ic_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/front_idcard_layout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/phont_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <TextView
                    android:textColor="@color/tailt_dark"
                    android:textSize="@dimen/home_Size_15"
                    android:gravity="center"
                    android:text="身份证正面"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="@dimen/home_Size_16"
                    android:gravity="center"
                    android:background="@mipmap/dashed_icon"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <ImageView
                    android:id="@+id/front_idcard_image"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/camera_icon"
                    android:layout_width="match_parent"
                    android:layout_height="128dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/id_card_zheng_layout"
                android:background="@color/phont_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <TextView
                    android:textColor="@color/tailt_dark"
                    android:textSize="@dimen/home_Size_15"
                     android:gravity="center"
                    android:text="身份证反面"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="@dimen/home_Size_16"
                    android:gravity="center"
                    android:background="@mipmap/dashed_icon"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <ImageView
                    android:id="@+id/id_card_image"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/camera_icon"
                    android:layout_width="match_parent"
                    android:layout_height="128dp" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:background="@color/ic_white"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/certificate_layout"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/phont_background"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/tailt_dark"
                    android:textSize="@dimen/home_Size_15"
                    android:text="个人照片"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="@dimen/home_Size_16"
                    android:gravity="center"
                    android:background="@mipmap/dashed_icon"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <ImageView
                    android:id="@+id/certificate_image"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/camera_icon"
                    android:layout_width="match_parent"
                    android:layout_height="128dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="170dp">


            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/vMasker"
            android:visibility="gone"
            android:background="#e0000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>

</ScrollView>
    <LinearLayout
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/ic_white"
            android:background="@drawable/loing_button_corners"
            android:textSize="@dimen/home_Size_18"
            android:text="提交" />
    </LinearLayout>

    </RelativeLayout>