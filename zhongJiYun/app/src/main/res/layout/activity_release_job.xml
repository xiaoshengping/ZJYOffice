<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.zhongjiyun03.zhongjiyun.uilts.ReleaseJobActivity">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    <include android:id="@+id/head_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" layout="@layout/app_head_layout"/>
    <RelativeLayout
        android:layout_below="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/work_address_layout"

        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333333"
            android:id="@+id/work_address_text"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="工作区域"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/ic_white"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/work_address_text"
            android:id="@+id/work_address_edit"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="请选择"
            android:gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drilling_type_layout"
        android:layout_below="@+id/work_address_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333333"
            android:id="@+id/drilling_type_text"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="钻机型号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/ic_white"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/drilling_type_text"
            android:id="@+id/drilling_type_edit"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="请选择"
            android:gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/compensation_layout"
        android:layout_below="@+id/drilling_type_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333333"
            android:id="@+id/compensation_text"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="薪资水平"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/ic_white"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/compensation_text"
            android:id="@+id/compensation_edit"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="请选择"
            android:gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/work_time_layout"
        android:layout_below="@+id/compensation_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333333"
            android:id="@+id/work_time_text"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="工作年限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/ic_white"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/work_time_text"
            android:id="@+id/work_time_edit"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="请选择"
            android:gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/welfare_layout"
        android:background="@color/ic_white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/work_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/line_image_one"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
          <TextView
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
              android:id="@+id/tailt_text"
              android:layout_below="@+id/line_image_one"
              android:textColor="@color/color_222222"
              android:textSize="@dimen/home_Size_16"
              android:text="福利待遇"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />


        <CheckBox
            android:layout_below="@+id/tailt_text"
            android:id="@+id/efficiency_rabutton"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_14"
            android:text="包吃住"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="70dp"
            android:layout_height="30dp" />
        <CheckBox
            android:layout_below="@+id/tailt_text"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_toRightOf="@+id/efficiency_rabutton"
            android:id="@+id/manner_checkBox"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/home_Size_14"
            android:text="加班费"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="70dp"
            android:layout_height="30dp" />
        <CheckBox
            android:layout_below="@+id/tailt_text"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_toRightOf="@+id/manner_checkBox"
            android:id="@+id/service_checkBox"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/home_Size_14"
            android:text="节假日休息"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="90dp"
            android:layout_height="30dp" />

        <CheckBox
            android:layout_toRightOf="@+id/service_checkBox"
            android:layout_below="@+id/tailt_text"
            android:id="@+id/rest_rabutton"
            android:button="@null"
            android:background="@drawable/checkbox_commit_selector"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/home_Size_14"
            android:text="其他"
            android:gravity="center"
            android:textColor="@color/commit_color_seletor"
            android:layout_width="70dp"
            android:layout_height="30dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/efficiency_rabutton"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/welfare_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="5dp"
            android:textColor="@color/color_222222"
            android:id="@+id/project_introduce_text"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="任职要求"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textMultiLine"
            android:background="@color/ic_white"
            android:layout_centerInParent="true"
            android:layout_below="@+id/project_introduce_text"
            android:id="@+id/project_introduce_edit"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入任职要求。"
            android:gravity="top"
            android:layout_marginRight="20dp"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="100dp" />



    </RelativeLayout>
    <ImageView
        android:background="@color/color_dadada"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    </RelativeLayout>

         <View
             android:id="@+id/vMasker"
             android:visibility="gone"
             android:background="#e0000000"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"/>
     </RelativeLayout>
</ScrollView>
