            android:drawableLeft="@mipmap/service_tel_icon"
            android:text="18819220222"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/address_text_view"
            android:textColor="@color/tailt_dark"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_16"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/service_loc_icon_3x"
            android:text="18819220222"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/chance_zhu_text"
            android:textColor="@color/tailt_dark"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/home_Size_16"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/service_type_icon"
            android:text="18819220222"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

