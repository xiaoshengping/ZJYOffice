<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.zhongjiyun03.zhongjiyun.uilts.RawardBuyListParticularsActivity">

    <include android:id="@+id/head_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" layout="@layout/app_head_layout"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/raward_layout"
        android:layout_below="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout

        android:id="@+id/name_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_text"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="购买人姓名：李朝阳"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/phone_text"
            android:layout_below="@+id/name_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_text"
            android:layout_below="@+id/phone_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/address_text"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name_layout"
        android:id="@+id/facillty_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/facility_image"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/facility_image"
            android:id="@+id/facillty_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"

            android:text="购买人姓名：李朝阳"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/facility_type_text"
            android:layout_below="@+id/facillty_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/work_time_text"
            android:layout_below="@+id/facility_type_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/work_age_text"
        android:layout_below="@+id/work_time_text"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/home_Size_14"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="手机号码：18282838838"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/buy_number_text"
            android:layout_below="@+id/work_age_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buy_number_text"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/facillty_layout"
        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/content_image"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:layout_below="@+id/content_image"
            android:id="@+id/detail_text"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/home_Size_16"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="求购细节"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detail_content_text"
            android:layout_below="@+id/detail_text"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/home_Size_14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="手机号码：18282838838"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/detail_content_text"
            android:src="@color/color_dadada"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
