<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/ic_white"
    android:layout_height="match_parent">
   <RelativeLayout
       android:id="@+id/content_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tailt_text"
           android:textColor="@color/tailt_dark"
           android:textSize="@dimen/home_Size_18"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:text="碧桂园马来西亚桩基础工程"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_below="@+id/tailt_text"
           android:id="@+id/company_text"

           android:textSize="@dimen/home_Size_16"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="5dp"
           android:text="发布公司:碧桂园马来西亚"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </RelativeLayout>
    <ImageView
        android:id="@+id/zhong_biao_image"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
    android:layout_below="@+id/content_layout"
    android:id="@+id/address_text"
    android:textSize="@dimen/home_Size_16"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:text="所在地:广州市天和区"
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
       android:layout_alignParentRight="true"
        android:layout_below="@+id/zhong_biao_image"
        android:id="@+id/data_text"
        android:textSize="@dimen/home_Size_16"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="2015-12-15"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>