<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/ic_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



   　<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <TextView
         android:id="@+id/tailt_text"
         android:textColor="@color/tailt_dark"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
         android:textSize="@dimen/home_Size_16"
         android:text="容桂碧桂园"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bids_tage_text"
        android:background="@drawable/text_view_corners"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/home_Size_15"
        android:textColor="@color/red_light"
        android:text="招标中"
        android:gravity="center"
        android:layout_width="53dp"
        android:layout_height="23dp" />

   </RelativeLayout>
    　<RelativeLayout
       android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/company_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/home_Size_15"
        android:text="发布公司:"
        android:textColor="@color/content_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/content_color"
        android:id="@+id/company_name"
        android:layout_toRightOf="@+id/company_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/home_Size_15"

        android:text="哈尔滨君豪建筑基础有限公司"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/content_color"
            android:id="@+id/address_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/home_Size_15"
            android:text="项目所在地:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/content_color"
            android:layout_toRightOf="@+id/address_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/home_Size_15"
            android:id="@+id/address_text_view"
            android:text="广东顺德"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/content_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/home_Size_15"
            android:id="@+id/time_text"
            android:text="2015-12-09"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <ImageView

        android:layout_marginTop="10dp"
        android:src="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/success_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bid_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>