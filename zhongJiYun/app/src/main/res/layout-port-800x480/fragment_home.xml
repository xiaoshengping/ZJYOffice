<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:scrollbars="none"
    android:id="@+id/home_scrollView"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context="com.example.zhongjiyun03.zhongjiyun.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/network_remind_layout"
            android:gravity="center_vertical"
            android:background="@color/network_remind_color"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@mipmap/tip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/home_Size_15"
                android:textColor="@color/tailt_dark"
                android:layout_marginLeft="10dp"

                android:text="世界上最遥远的距离就是没网。检查设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="20dp"
                android:drawableRight="@mipmap/gray_arrow_icon"
                android:layout_alignParentRight="@+id/loing_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        >

        <com.example.zhongjiyun03.zhongjiyun.widget.AutoScrollViewPager
            android:id="@+id/home_banner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/home_dot_ll"
            android:layout_above="@+id/home_banner_viewpager"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"></LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.example.zhongjiyun03.zhongjiyun.view.MyGridView
        android:id="@+id/home_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@null"
        android:numColumns="5"
        android:layout_marginBottom="15dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        >

    </com.example.zhongjiyun03.zhongjiyun.view.MyGridView>
    </LinearLayout>
        <ImageView
        android:background="@color/color_dedede"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
        <ImageView
            android:layout_marginTop="10dp"
            android:background="@color/color_dedede"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    <RelativeLayout

        android:background="@color/ic_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_view"
            android:src="@color/red_light"
            android:layout_width="2dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/used_recommend"
            android:textSize="@dimen/home_Size_16"
            android:layout_toRightOf="@+id/image_view"
            android:text="二手机推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toLeftOf="@+id/more_imag"
            android:id="@+id/more_text_view"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:textColor="@color/red_light"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/home_Size_14"
            android:text="更多"
            android:layout_width="50dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/more_imag"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_red_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/image_ligin"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/image_view"
            android:src="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <HorizontalScrollView
            android:background="@color/white"
            android:layout_below="@+id/image_ligin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <FrameLayout android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="140dp">
                <LinearLayout
                    android:layout_width="640dip"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <GridView
                        android:numColumns="6"
                        android:background="@color/white"
                        android:id="@+id/project_gridview"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>








    </RelativeLayout>
        <ImageView
            android:background="#dedede"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <ImageView
            android:layout_marginTop="10dp"
            android:background="#dedede"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:background="@color/ic_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:id="@+id/project_image_view"
                android:src="@color/red_light"
                android:layout_width="2dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/project_recommend"
                android:textSize="@dimen/home_Size_16"
                android:layout_toRightOf="@+id/project_image_view"
                android:text="项目推荐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/project_more_text"
                android:layout_marginTop="8dp"
                android:textColor="@color/red_light"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/home_Size_14"
                android:layout_toLeftOf="@+id/project_more_imag"

                android:text="更多"
                android:gravity="right"
                android:layout_width="40dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/project_more_imag"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_red_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/project_image"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/project_image_view"
                android:src="@color/background"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <com.example.zhongjiyun03.zhongjiyun.view.CustomHomeScrollListView
                android:id="@+id/project_list_view"
                android:layout_marginTop="10dp"
                android:divider="#00000000"
                android:layout_below="@+id/project_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </com.example.zhongjiyun03.zhongjiyun.view.CustomHomeScrollListView>

        </RelativeLayout>




    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
